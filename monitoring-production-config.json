{
  "application": "Anchored Web Application",
  "environment": "production",
  "domain": "anchored.site",
  "monitoring": {
    "uptime": {
      "enabled": true,
      "interval": "5 minutes",
      "endpoints": [
        "https://anchored.site",
        "https://anchored.site/dashboard.html",
        "https://anchored.site/account.html"
      ]
    },
    "performance": {
      "enabled": true,
      "thresholds": {
        "page_load_time": "3 seconds",
        "asset_load_time": "2 seconds"
      }
    },
    "security": {
      "enabled": true,
      "checks": [
        "SSL certificate expiry",
        "Domain availability",
        "Content integrity"
      ]
    },
    "alerts": {
      "email": [],
      "webhook": [],
      "severity_levels": [
        "critical",
        "warning",
        "info"
      ]
    }
  },
  "backup": {
    "frequency": "daily",
    "retention": "30 days",
    "automated": true
  }
}